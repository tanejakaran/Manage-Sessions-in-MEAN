<html>
<head>
  <title>Angular, Nodejs and MongoDB</title>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

   <style> .glyphicon-thumbs-up { cursor:pointer } </style>
</head>
<body ng-app="NewApp">

  <div class="container">
        <div class="row">
            <div class="col-md-9">
              <ui-view></ui-view>
            </div>
        </div>
  </div>
  <script type="text/ng-template" id="templates/home.html">
    <div class="col-md-8 col-md-offset-2" style="border:solid 2px black; border-radius : 8px; margin-top:30px; padding:10px; ">
       <form class="form-horizontal" ng-submit="process()">
       <div class="form-group">
         <div class="col-sm-12">
           <label class="control-label">Enter Name:</label>
           <input type="text" ng-model="username" placeholder="">

           <button ng-show="clearSession">Clear Session</button>
        </div>
          
          
        </div> 
        <div class="form-group">
          <div class="col-sm-12">
          <label class="control-label">Select a Category:</label>
            <select ng-model="category">
                <option ng-repeat="obj in categories" value="{{obj.name}}">{{obj.name}}</option>
                <option value="Other">Other</option>
            </select>
            
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
          <label class="control-label">Confirm yes (check box):
            <input type="checkbox" name="confirmCheck" ng-model="confirmCheck">
          </label>
          </div>
        </div>
       
        <button class="btn btn-success" ng-disabled="incomplete" ng-click="success();">
          <span class="glyphicon glyphicon-save"></span> Proceed
        </button>
        </div>
      </form>

    </div>
  </script>
   <script type="text/ng-template" id="templates/verification.html">
    <div class="col-md-8 col-md-offset-2" style="border:solid 2px black; border-radius : 8px; margin-top:30px; padding:10px; ">
       <form class="form-horizontal" ng-submit="addPost()">
       <div class="form-group">
         <div class="col-sm-12">
           <label class="control-label">Enter Name:</label>
           <span ng-model="username">{{username}}</span>
         </div>
          
          
        </div> 
        <div class="form-group">
          <div class="col-sm-12">
          <label class="control-label">Select a Category:</label>
           <span ng-model="category">{{category}}</span>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-12">
          <label class="control-label">Confirm yes (check box):
            <input type="checkbox" ng-model="confirmCheck">
          </label>
          </div>
        </div>
       <div class="form-group">
            <div class="col-sm-2">
              <button class="btn btn-success" ng-click="modify()">
                <span class="glyphicon glyphicon-save"></span> Modify
              </button>
            </div>
            <div class="col-sm-2 col-md-offset-1">
               <button class="btn btn-success">
                <span class="glyphicon glyphicon-save"></span> Submit
              </button>
            </div>
       <div>
        
        </div>
      </form>

    </div>
   </script>

  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="https://code.angularjs.org/1.2.19/angular-cookies.js"></script>
  <script src="/javascripts/angularApp.js"></script>
 
</body>
</html>